<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t(".compose_new") %>
  </div>
  <%= f.submit t(".post"), class: "btn btn-primary" %>
  <span class="picture">
    <div class="picture_size">
      <%= f.file_field :picture, accept: "image/jpeg,image/gif,image/png" %>
    </div>
  </span>
<% end %>
<script>
    render partial: 'javascript/micropost_form', post: @post
</script>
